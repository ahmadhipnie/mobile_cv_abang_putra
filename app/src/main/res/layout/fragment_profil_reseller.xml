<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".reseller.fragment.ProfilFragmentReseller">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayoutProfilReseller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBarProfilReseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_extrabold"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_gravity="center"/>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_foto_profil_reseller"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayoutProfilReseller"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="1000dp">
            <ImageView
                android:id="@+id/iv_foto_profil_reseller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorPrimary"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_profil_reseller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_foto_profil_reseller"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nama_profil_reseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Reseller"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_extrabold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_tanggal_lahir_profil_reseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tanggal lahir"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_extrabold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_nomor_telepon_profil_reseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nomor telepon"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_extrabold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_email_profil_reseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_extrabold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_password_profil_reseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_extrabold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_alamat_profil_reseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="alamat"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_extrabold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_button_profil_reseller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_profil_reseller"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_kirim_feedback_profil_reseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/colorBtnFeedback"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:text="Kirim Feedback"
                android:textAllCaps="false"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ubah_data_profil_reseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ubah Data"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_button_logout_reseller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_button_profil_reseller"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout_reseller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ll_button_profil_reseller"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/red"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:text="logout" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>