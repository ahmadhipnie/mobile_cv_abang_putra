<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">



        <TextView
            android:id="@+id/tv_item_nama_barang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="@string/app_name"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tv_item_nama_transaksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_item_nama_barang"
            card_view:layout_constraintStart_toStartOf="@+id/tv_item_nama_barang"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_nama_barang"
            tools:text="Nama :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_item_alamat_transaksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_item_nama_transaksi"
            card_view:layout_constraintStart_toStartOf="@+id/tv_item_nama_transaksi"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_nama_transaksi"
            tools:text="Alamat :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_item_status_transaksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_item_alamat_transaksi"
            card_view:layout_constraintStart_toStartOf="@+id/tv_item_alamat_transaksi"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_alamat_transaksi"
            tools:text="status :"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_item_total_harga_transaksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/tv_item_status_transaksi"
            app:layout_constraintStart_toStartOf="@+id/tv_item_status_transaksi"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_status_transaksi"
            android:text="total harga : "
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_item_jumlah_barang_transaksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/tv_item_total_harga_transaksi"
            app:layout_constraintStart_toStartOf="@+id/tv_item_total_harga_transaksi"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_total_harga_transaksi"
            android:text="jumlah barang : "
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/btn_ubah_status_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_total_harga_transaksi"
            android:text="@string/app_name"
            android:fontFamily="@font/poppins_semibold"
            android:backgroundTint="@color/colorPrimary"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>